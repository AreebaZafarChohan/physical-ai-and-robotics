{
  "openapi": "3.0.0",
  "info": {
    "title": "RAG Agent Chat API",
    "version": "1.0.0",
    "description": "API for interacting with the RAG Agent with Gemini Backend."
  },
  "paths": {
    "/chat": {
      "post": {
        "summary": "Send a query to the RAG Agent",
        "operationId": "sendQuery",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "The user's query for the RAG agent."
                  }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response from the RAG agent.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string",
                      "description": "The agent's grounded answer or 'I don't know'."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error, e.g., if retrieval tool fails.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "description": "Details about the error encountered."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}